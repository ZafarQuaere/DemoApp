<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressDialogTheme" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomProgressDialogStyle</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/color_app_theme</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="CustomProgressDialogStyle">
        <item name="android:bottomBright">@color/colorTransparent</item>
        <item name="android:bottomDark">@color/colorTransparent</item>
        <item name="android:bottomMedium">@color/colorTransparent</item>
        <item name="android:centerBright">@color/colorTransparent</item>
        <item name="android:centerDark">@color/colorTransparent</item>
        <item name="android:centerMedium">@color/colorTransparent</item>
        <item name="android:fullBright">@color/colorTransparent</item>
        <item name="android:fullDark">@color/colorTransparent</item>
        <item name="android:topBright">@color/colorTransparent</item>
        <item name="android:topDark">@color/colorTransparent</item>
    </style>
    <!--Alert Dialog Theme-->
    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">#de000000</item>
        <item name="android:textColorPrimary">#8a000000</item>
        <item name="buttonBarPositiveButtonStyle">@style/positive</item>

    </style>

    <!-- Password Edit -->
    <style name="PasswordInputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:inputType">textPassword</item>
        <item name="android:minHeight">@dimen/edit_field_height</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:background">@drawable/rectangle_bg</item>
    </style>

    <!-- TextInput Edit -->
    <style name="TextInputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/edit_field_height</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:background">@drawable/rectangle_bg</item>
    </style>

    <!-- TextInput Edit -->
    <style name="NumberInputEdit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/edit_field_height</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:inputType">number</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:textColorHint">@color/colorHintText</item>
        <item name="android:background">@drawable/rectangle_bg</item>
    </style>

    <!-- XLarge TextView -->
    <style name="XLargeTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/xx_large_text</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Large TextView -->
    <style name="LargeTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/x_large_text</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Regular TextView -->
    <style name="RegularTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Regular Theme TextView -->
    <style name="RegularThemeTextview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/color_app_theme</item>
    </style>

    <!-- Actionbar Title TextView -->
    <style name="ActionBarTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/actionbar_title_text</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Empty TextView -->
    <style name="EmptyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/list_empty_text_size</item>
        <item name="android:textColor">@color/colorInputText</item>
        <item name="android:layout_marginBottom">@dimen/_40dp</item>
    </style>

    <!-- Navigation TextView -->
    <style name="NavigationDrawerText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/nav_header_vertical_spacing</item>
        <item name="android:paddingBottom">@dimen/nav_header_vertical_spacing</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
    </style>

    <!-- Button Text -->
    <style name="ButtonTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/regular_text</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">@dimen/_10dp</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginHorizontal">@dimen/_30dp</item>
    </style>

    <style name="positive">
        <item name="android:textColor">#336ce6</item>
        <item name="android:background">@android:color/transparent</item>
    </style>



</resources>
