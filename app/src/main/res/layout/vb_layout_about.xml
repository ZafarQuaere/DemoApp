<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/_20dp">

    <TextView
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/about" />
    
    <TextView
        android:id="@+id/textAddProductNServices"
        android:background="@drawable/btn_follow"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:drawableTop="@drawable/ic_add"
        android:paddingVertical="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/description" />

    <TextView
        android:id="@+id/textAboutWhyUs"
        android:background="@drawable/btn_follow"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:drawableTop="@drawable/ic_add"
        android:paddingVertical="@dimen/_20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/why_us" />

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/recycler_product_services"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_height="110dp"
        android:background="@color/colorWhite"
        android:overScrollMode="never"
        android:orientation="horizontal"
        android:scrollbars="none"
        tools:listitem="@layout/header_image_list_item" />

</LinearLayout>


