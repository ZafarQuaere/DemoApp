<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/RegularTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5dp"
                    android:text="@string/basic_details" />

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/business_name"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="70"
                    android:minHeight="@dimen/edit_field_height"/>

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/business_dialog"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="70"
                    android:minHeight="@dimen/edit_field_height"/>

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/category"/>
                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:id="@+id/lytCategorySpin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_field_height"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_transparent_bg"
                    android:paddingBottom="@dimen/_5dp"
                    android:visibility="visible">

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_field_height"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="right"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/detailed_business_description"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="1000"
                    android:gravity="bottom"
                    android:minHeight="@dimen/_100dp"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/RegularTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5dp"
                    android:text="@string/other_details" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:text="@string/year_founded"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="10"
                    android:inputType="number"
                    android:minHeight="@dimen/edit_field_height"/>


                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/awards_n_achievement"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="70"
                    android:gravity="bottom"
                    android:minHeight="@dimen/_100dp"/>


                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:id="@+id/lytAccountIdSpinnerBg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_field_height"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10dp"
                    android:background="@drawable/button_transparent_bg"
                    android:visibility="visible">

                    <Spinner
                        android:id="@+id/spinnerAccountId"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_field_height"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="right"
                        android:visibility="visible" />
                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/RegularTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5dp"
                    android:text="@string/contact_details" />


                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/address"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="120"
                    android:maxLines="3"
                    android:minHeight="@dimen/edit_field_height"/>

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/phone"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="10"
                    android:inputType="phone"
                    android:maxLines="3"
                    android:minHeight="@dimen/edit_field_height"/>

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/alternate_phone"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="10"
                    android:inputType="phone"
                    android:minHeight="@dimen/edit_field_height"/>


                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/email_id"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="50"
                    android:inputType="textEmailAddress"
                    android:minHeight="@dimen/edit_field_height"/>

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/website"/>

                <EditText
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_transparent_bg"
                    android:maxLength="60"
                    android:inputType="textWebEditText"
                    android:minHeight="@dimen/edit_field_height"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="5dp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_20dp"
                android:orientation="vertical">

                <TextView
                    style="@style/RegularTextview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:gravity="center"
                    android:paddingVertical="@dimen/_5dp"
                    android:text="@string/service_details" />

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/charges"/>
                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_field_height"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_transparent_bg"
                    android:paddingBottom="@dimen/_5dp"
                    android:visibility="visible">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_field_height"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="right"
                        android:visibility="visible" />
                </LinearLayout>

                <TextView
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/text_small_header"
                    android:text="@string/amount"/>
                <LinearLayout
                    android:layout_marginHorizontal="@dimen/_5dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_field_height"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/button_transparent_bg"
                    android:paddingBottom="@dimen/_5dp"
                    android:visibility="visible">

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_field_height"
                        android:layout_centerVertical="true"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="right"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>


        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:background="@drawable/rounded_background"
            android:text="@string/add_business"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/actionbar_title_text" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp" />
    </LinearLayout>


</ScrollView>