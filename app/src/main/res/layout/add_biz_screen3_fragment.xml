<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:padding="@dimen/_15dp"
    tools:context=".ui.fragments.add_business.AddBizScreen2Fragment">

    <TextView
        android:id="@+id/textScreen1Label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contact_details"
        android:textSize="@dimen/font_xx_large_text" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:hint="@string/mobile_no">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editMobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:inputType="number"
                    android:maxLength="10" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:hint="@string/alternate_mobile">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editAlternateMobile"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:inputType="number"
                    android:maxLength="10" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:hint="@string/telephone_with_code">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editTelephone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:inputType="number"
                    android:maxLength="12" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:hint="@string/email_id">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:inputType="textWebEmailAddress"
                    android:maxLength="55" />

            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10dp"
                android:hint="@string/website">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/editBizWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50dp"
                    android:inputType="textWebEmailAddress"
                    android:maxLength="55" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_small_header"
                android:textColor="@color/colorPrimary"
                android:text="eg: www.example.com"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/btnPrevious"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/rounded_background"
                    android:fontFamily="serif-monospace"
                    android:paddingHorizontal="@dimen/_20dp"
                    android:paddingVertical="@dimen/_5dp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_x_large_text"
                    android:textStyle="bold"
                    android:text="@string/previous"
                    android:textAllCaps="false" />

                <TextView
                    android:id="@+id/btnSubmitAddBiz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rounded_background"
                    android:fontFamily="serif-monospace"
                    android:paddingHorizontal="@dimen/_20dp"
                    android:paddingVertical="@dimen/_5dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_x_large_text"
                    android:textStyle="bold"
                    android:text="@string/submit"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>