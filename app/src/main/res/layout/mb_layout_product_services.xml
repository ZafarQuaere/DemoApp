<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_20dp">

    <TextView
        android:id="@+id/textPnDHeader"
        android:background="@drawable/btn_follow"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:paddingVertical="@dimen/_5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/product_n_services" />

    <TextView
        android:id="@+id/textAddProductNServices"
        android:background="@drawable/btn_follow"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:drawableTop="@drawable/ic_add"
        android:paddingVertical="@dimen/_40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/add_product_or_services" />

    <TextView
        android:visibility="gone"
        android:id="@+id/textAdd"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginHorizontal="@dimen/_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:drawablePadding="@dimen/_5dp"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/font_x_large_text"
        android:text="@string/add"
        app:drawableStartCompat="@drawable/ic_add" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/_20dp"
        android:visibility="visible"
        android:id="@+id/listViewProductServices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:overScrollMode="never"
        android:scrollbars="none"
        tools:listitem="@layout/my_biz_category_item" />

</LinearLayout>


