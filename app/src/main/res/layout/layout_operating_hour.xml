<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:clickable="false"
    android:focusable="false"
    android:orientation="vertical"
    tools:context=".ui.activities.mybiz.OperatingHour">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10dp"
            android:background="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="@string/operatingHours"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_actionbar_title_text" />

    </RelativeLayout>

    <CheckBox
        android:id="@+id/checkCopyForWeekday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginTop="@dimen/_10dp"
        android:checked="false"
        android:enabled="false"
        android:text="@string/copy_for_weekdays" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Switch
            android:id="@+id/switchMon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:checked="true"
            android:paddingEnd="@dimen/_10dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:paddingStart="@dimen/_3dp"
            android:text="@string/monday" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/from" />

        <TextView
            android:id="@+id/monFromTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="@string/default_start_time"
            style="@style/OpHourText"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/font_small_text"
            android:text="@string/to" />

        <TextView
            android:id="@+id/monEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="@string/default_end_time"
            style="@style/OpHourText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Switch
            android:id="@+id/switchTue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:checked="false"
            android:paddingEnd="@dimen/_10dp"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:paddingStart="@dimen/_3dp"
            android:text="@string/tuesday" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/from" />

        <TextView
            android:id="@+id/tueFromTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_start_time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/font_small_text"
            android:text="@string/to" />

        <TextView
            android:id="@+id/tueEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_end_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Switch
            android:id="@+id/switchWed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:checked="false"
            android:paddingEnd="@dimen/_10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:text="@string/wednesday" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/from" />

        <TextView
            android:id="@+id/wedFromTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_start_time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/font_small_text"
            android:text="@string/to" />

        <TextView
            android:id="@+id/wedEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_end_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Switch
            android:id="@+id/switchThu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:checked="false"
            android:paddingEnd="@dimen/_10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:paddingStart="@dimen/_3dp"
            android:text="@string/thursday" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/from" />

        <TextView
            android:id="@+id/thuFromTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_start_time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/font_small_text"
            android:text="@string/to" />

        <TextView
            android:id="@+id/thuEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_end_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Switch
            android:id="@+id/switchFri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:checked="false"
            android:paddingEnd="@dimen/_10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:paddingStart="@dimen/_3dp"
            android:text="@string/friday" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/from" />

        <TextView
            android:id="@+id/friFromTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_start_time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/font_small_text"
            android:text="@string/to" />

        <TextView
            android:id="@+id/friEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_end_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Switch
            android:id="@+id/switchSat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:checked="false"
            android:paddingEnd="@dimen/_10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:paddingStart="@dimen/_3dp"
            android:text="@string/saturday" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/from" />

        <TextView
            android:id="@+id/satFromTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_start_time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/font_small_text"
            android:text="@string/to" />

        <TextView
            android:id="@+id/satEndTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            style="@style/OpHourText"
            android:text="@string/default_end_time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10dp"
        android:layout_marginEnd="@dimen/_5dp"
        android:orientation="horizontal"
        android:weightSum="6">

        <Switch
            android:id="@+id/switchSun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:checked="false"
            android:paddingEnd="@dimen/_10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:paddingStart="@dimen/_3dp"
            android:text="@string/sunday" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/from" />

        <TextView
            android:id="@+id/sunFromTime"
            style="@style/OpHourText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="@string/default_start_time" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:gravity="center"
            android:textSize="@dimen/font_small_text"
            android:text="@string/to" />

        <TextView
            android:id="@+id/sunEndTime"
            style="@style/OpHourText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:text="@string/default_end_time" />
    </LinearLayout>

    <TextView
        android:id="@+id/textSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/_20dp"
        android:layout_marginEnd="@dimen/_20dp"
        android:layout_marginBottom="@dimen/_20dp"
        android:background="@drawable/rounded_background"
        android:paddingHorizontal="@dimen/_15dp"
        android:paddingVertical="@dimen/_5dp"
        android:text="@string/submit"
        android:textColor="@color/colorWhite" />


</LinearLayout>