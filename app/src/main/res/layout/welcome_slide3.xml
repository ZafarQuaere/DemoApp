<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/follow">

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/text"
        android:background="@drawable/welcome_33"/>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/desc"
        android:layout_centerHorizontal="true"
        android:text="@string/slide_3_title"
        android:fontFamily="@font/isocpeur"
        android:textColor="@color/white"
        android:textSize="@dimen/slide_title"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spcae"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10dp"
        android:fontFamily="@font/arial"
        android:paddingHorizontal="@dimen/_20dp"
        android:text="@string/slide_3_desc"
        android:textAlignment="center"
        android:textColor="@color/colorLightGrey"
        android:textSize="@dimen/slide_desc"
        android:textStyle="bold" />

    <Space
        android:id="@+id/spcae"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:layout_alignParentBottom="true" />


</RelativeLayout>