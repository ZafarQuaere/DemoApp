<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/_10dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textBusinessName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:paddingVertical="@dimen/_5dp"
            android:text="@string/business_name"
            android:textAllCaps="true"
            android:textSize="@dimen/font_x_large_text"
            android:textStyle="bold"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/imgEditBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_50dp"
            android:layout_toEndOf="@+id/textBusinessName"
            android:background="@drawable/ic_edit_black"
            android:onClick="editBusinessClick"
            android:textColor="@color/colorBlack"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textFollow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_background"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10dp"
            android:paddingVertical="@dimen/_3dp"
            android:text="@string/follow"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_regular_text"
            android:visibility="visible" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textFollowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/followers"
        android:textAllCaps="false"
        android:textSize="@dimen/font_regular_text"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textShortDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/short_description_must_not_be_more_than_55_characters"
        android:textAllCaps="false"
        android:textSize="@dimen/font_regular_text"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textEstablishedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5dp"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/established_year"
        android:textAllCaps="false"
        android:textSize="@dimen/font_regular_text"
        android:visibility="visible" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5dp"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/address"
            android:textAllCaps="false"
            android:textSize="@dimen/font_regular_text"
            android:visibility="visible" />

        <Switch
            android:id="@+id/switchAddressDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:checked="true" />
    </RelativeLayout>
</LinearLayout>


