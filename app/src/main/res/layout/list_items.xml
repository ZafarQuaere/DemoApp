<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:tag="cards main container">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20dp">

            <ImageView
                android:id="@+id/imgItem"
                android:layout_width="@dimen/list_item_image_width"
                android:layout_height="@dimen/list_item_image_height"
                android:src="@drawable/icon_man" />

            <TextView
                android:id="@+id/item_number"
                style="@style/RegularThemeTextview"
                android:layout_margin="@dimen/_10dp"
                android:layout_toRightOf="@+id/imgItem"
                tools:text="@string/save_address" />

            <TextView
                android:id="@+id/content"
                style="@style/RegularThemeTextview"
                android:layout_below="@+id/item_number"
                android:layout_margin="@dimen/_10dp"
                android:layout_toRightOf="@+id/imgItem"
                tools:text="@string/save_address" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_edit_black" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>