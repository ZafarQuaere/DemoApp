<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/_10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_round_corner_bg">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="ifContentScrolls"
            android:scrollbars="none">


            <LinearLayout
                android:id="@+id/lytInputs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:layout_marginTop="@dimen/_10dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10dp"
                        android:hint="@string/enter_address"
                        android:maxLength="70"
                        android:textSize="@dimen/font_regular_text" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editMobile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10dp"
                        android:inputType="number"
                        android:hint="@string/enter_mobile_no"
                        android:maxLength="10"
                        android:textSize="@dimen/font_regular_text" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10dp"
                        android:hint="@string/enter_email"
                        android:maxLength="70"
                        android:textSize="@dimen/font_regular_text" />
                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editBizWebsite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingStart="@dimen/_10dp"
                        android:hint="@string/enter_website"
                        android:inputType="textEmailAddress"
                        android:maxLength="90"
                        android:textSize="@dimen/font_regular_text" />
                </com.google.android.material.textfield.TextInputLayout>


                <View
                    android:id="@+id/separator"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_separator_height"
                    android:layout_below="@+id/text_message"
                    android:layout_marginTop="@dimen/dialog_separator_margin_top"
                    android:background="@color/dialog_separator_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dialog_btn_ok_height"
                    android:layout_below="@+id/separator"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCancel"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dialog_btn_ok_height"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:text="cancel"
                        android:textColor="@color/dialog_btn_text_color"
                        android:textSize="@dimen/dialog_btn_text_size" />

                    <View
                        android:layout_width="@dimen/dialog_separator_height"
                        android:layout_height="match_parent"
                        android:background="@color/dialog_separator_color" />

                    <Button
                        android:id="@+id/btn_ok"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dialog_btn_ok_height"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:text="Ok"
                        android:textColor="@color/dialog_btn_text_color"
                        android:textSize="@dimen/dialog_btn_text_size" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </androidx.cardview.widget.CardView>

</LinearLayout>